<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= task.title %>,
      "Deadline : " <%=  task.deadline.strftime("%D")  %>
       <%= link_to "Edit this task", edit_task_path(task) %>
       <%= check_box_tag :done, 1, false, data: { remote: true, url: task_path(task.id), params: { status: true }.to_param, method: "put" }%>
    </li>
  <% end %>
</ul>
